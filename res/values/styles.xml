<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/LightActionBar</item>
        <item name="android:actionBarStyle">@style/LightActionBar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Recipe</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Recipe</item>
        <item name="homeAsUpIndicator">@drawable/ic_prev</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_prev</item>
    </style>

    <style name="LightActionBar" parent="@style/Widget.Sherlock.ActionBar">
		<item name="displayOptions">showHome</item>
        <item name="android:displayOptions">showHome</item>
        <item name="background">@drawable/abs_background</item>
        <item name="android:background">@drawable/abs_background</item>
        <item name="titleTextStyle">@style/Theme.Recipe.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/Theme.Recipe.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="Theme.Recipe.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="DropDownNav.Recipe" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/abs_spinner_background</item>
    </style>
</resources>