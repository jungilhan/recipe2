<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/LightActionBar</item>
    </style>

    <style name="LightActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:displayOptions">showHome<!--|showTitle--></item>
        <item name="android:background">@drawable/abs_background</item>
        <item name="android:titleTextStyle">@style/Theme.Recipe.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="Theme.Recipe.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>
    
</resources>