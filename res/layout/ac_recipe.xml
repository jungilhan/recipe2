<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ListView
        android:id="@+id/lv_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_comment_container_wrapper" />

    <LinearLayout
        android:id="@+id/ll_comment_container_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="vertical">
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e44f37" />
        
	    <LinearLayout
	        android:id="@+id/ll_comment_container"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingBottom="6dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="6dp" >
	    
	        <LinearLayout 
	            android:id="@+id/ll_like_wrapper"
	            android:layout_width="38dp"
	            android:layout_height="38dp"
	            android:gravity="center"
	            android:clickable="true" >
	            <ImageView
	                android:id="@+id/iv_like"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:duplicateParentState="true"
	                android:src="@drawable/ic_comment_like" />	            
	        </LinearLayout>

	
	        <EditText
	            android:id="@+id/et_comment"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:hint="댓글 쓰기" />
	
	        <ImageView
	            android:id="@+id/iv_send"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:src="@drawable/btn_send" />
	    </LinearLayout>
    </LinearLayout>
</RelativeLayout>